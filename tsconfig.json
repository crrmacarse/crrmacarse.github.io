{
    "compilerOptions": {
      "baseUrl": "src",
      "outDir": "dist",
      "noImplicitAny": true,
      "module": "esnext",
      "target": "es6",
      "jsx": "react",
      "allowJs": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "lib": ["dom","esnext"],
      "esModuleInterop": true,
      "strictNullChecks": false,
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "docs"],
  }
  